@import "../index/index.wxss";
.banner {
    width: 750rpx;
    height: 260rpx;
}
.apeci_txt {
    width: 682rpx;
    margin-left: 34rpx;
    font-size: 30rpx;
    color: rgb(51,51,51);
    text-indent: 2em;
    line-height: 50rpx;
}
.title {
    font-size: 40rpx;
    color: #000;
    text-align: center;
    line-height: 1;
    margin: 40rpx 0;
    font-weight: 500;
}
.sub_item {
    width: 700rpx;
    height: 320rpx;
    background-color: #bfa;
    background-repeat: no-repeat;
    /*background-image: url("");*/
    background-size: 700rpx 320rpx;
    margin: 0 auto 45rpx;
    position: relative;
}

.item_txt {
    font-size: 32rpx;
    color: #000;
    line-height: 70rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}