@import "../index/index.wxss";

.search-content {
    display: flex;
    font-size:26rpx;
    padding: 18rpx 0 17rpx 30rpx;
}

.search-input {
    display: flex;
    background-color: #F5F5F5;
    align-items: center;
    width: 588rpx;
    height: 48rpx;
    border-radius: 24rpx;
}

.search-input_wrap {
    width: 596rpx;
    height: 56rpx;
    border-radius: 28rpx;
    justify-content: center;
}
.search-input image {
    width: 24rpx;
    height: 24rpx;
    padding: 0 23rpx;
}
.search-input input {
    height: 100%;
    color: #BFA267;
    width: 527rpx;
}
.gohome {
    height: 54rpx;
    line-height: 54rpx;
    width: 81rpx;
    text-align: right;
    padding-right: 20rpx;
    color: #BFA267;
}
.hot-search {
    margin-top: 40rpx;
    margin-left: 30rpx;
    margin-bottom: 24rpx;
    font-size: 32rpx;
    color: #333333;
    line-height: 38rpx;
}

.keywords {
    display: flex;
    font-size: 24rpx;
    color: #4A4949;
    margin-left: 28rpx;
    flex-wrap: wrap;
}

.keywords li {
    margin-right: 22rpx;
    margin-bottom: 22rpx;
    border-radius:44rpx;
    height: 46rpx;
    background-color: #BFA267;
    align-items: center;
    padding: 4rpx;
}

.keywords_item {
    width: 100%;
    border-radius: 42rpx;
    background-color: #fff;
    font-size: 28rpx;
    line-height: 36rpx;
    color: #BFA267;
    padding: 4rpx 16rpx;
}