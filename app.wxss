@import "iconfont.wxss";

view, text, input, textarea, button {
  font-family: 'PingFang SC', 'Microsoft Yahei';
}
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.wraps {
  font-family:PingFangSC-Regular;
}
button::after{
  border: 0;
  width: inherit;
  height: inherit;
}
button {
  border: 0;
  background: none;
  padding: 0;
  text-align:inherit;
  line-height:inherit;
  color: inherit;
}
input{
  outline:none;
  border:none;
  list-style: none;
}
.flex {
  display: flex;
}

.common_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: -6rpx -6rpx 20rpx 0px #FFFFFF, 6rpx 6rpx 20rpx 0 #C5D6F1;
  background-image: linear-gradient(127deg, rgba(255, 255, 255, 1), rgba(191, 162, 103, 1));
}

.common_content {
  background-color: #fff;
  box-sizing: border-box;
  background-clip: content-box,padding-box;
}

