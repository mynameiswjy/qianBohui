<view>
    <view class="search-content">
        <view class="search-input_wrap common_wrap">
            <view class="search-input common_content">
                <image src="../../images/pageImg/search.png"></image>
                <input value="{{value}}" placeholder="{{keywords[0].name}}" bindinput="inputTyping" bindconfirm="search" type="text"/>
            </view>
        </view>
        <view class="gohome" bindtap="goBack">取消</view>
    </view>
    <block wx:if="{{isHide}}">
        <view class="hot-search">热门搜索</view>
        <ul class="keywords">
            <li wx:for="{{keywords}}" wx:key="{{index}}" class="common_wrap" bindtap="keywordsChange" data-val="{{item.name}}">
                <view class="keywords_item">{{item.name}}</view>
            </li>
        </ul>
    </block>
