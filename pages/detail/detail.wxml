<view class="detail_wrap">
    <view class="detail_content" style='margin-bottom:{{btuBottom}}'>
        <view style="height: 37rpx"></view>
        <view class="content_images">
            <image src="{{obj.url1}}"></image>
        </view>
        <view class="tab_wrap">
            <view class="tab_tr">
                <view class="tab_td1">钱币名称</view>
                <view class="tab_td6">{{obj.tiele}}</view>
                <!--<view class="tab_td3">年份</view>
                <view class="tab_td4">{{obj.moneyYear}}</view>-->
            </view>
            <view class="tab_tr">
                <view class="tab_td1">编号</view>
                <view class="tab_td2">{{obj.moneyCode}}</view>
                <view class="tab_td3">直径(毫米)</view>
                <view class="tab_td4">{{obj.moneyDiameter}}</view>
            </view>
            <view class="tab_tr">
                <view class="tab_td1">面额(元)</view>
                <view class="tab_td2">{{obj.moneySum}}</view>
                <view class="tab_td3">成色</view>
                <view class="tab_td4">{{obj.moneyFineness}}</view>
            </view>
            <view class="tab_tr">
                <view class="tab_td1">材质</view>
                <view class="tab_td2 {{obj.moneyTexture.length>4?'sb':''}}">{{obj.moneyTexture}}</view>
                <view class="tab_td3">重量</view>
                <view class="tab_td4">{{obj.moneyWeight}}</view>
            </view>
            <view class="tab_tr">
                <view class="tab_td1">质量</view>
                <view class="tab_td2">{{obj.moneyQuality}}</view>
                <view class="tab_td3">系列</view>
                <view class="tab_td4">{{obj.moneySelectItem}}</view>
            </view>
            <!--<view class="tab_tr">
                <view class="tab_td1 bottom">发行量(枚)</view>
                <view class="tab_td2 bottom">{{obj.moneyCirculation}}</view>
                <view class="tab_td3 bottom">铸造单位</view>
                <view class="tab_td4 bottom {{obj.moneyCompany.length>6?'sb':''}}">{{obj.moneyCompany}}</view>
            </view>-->
            <view class="tab_tr">
                <view class="tab_td1 bottom">发行量(枚)</view>
                <view class="tab_td2 bottom">{{obj.moneyCirculation}}</view>
                <view class="tab_td3 bottom">年份</view>
                <view class="tab_td4 bottom">{{obj.moneyYear}}</view>
            </view>
            <view class="tab_tr">
                <view class="tab_td1 bottom">铸造单位</view>
                <view class="tab_td5 bottom">{{obj.moneyCompany}}</view>
            </view>
        </view>
        <view class="captions"><!-- wx:if="{{options.IsShare == 1}}"-->
            <text style="color: #C6A056;">介绍: </text>{{obj.moneyIntroduce}}
        </view>
        <view class="footer">
            <view class="give-like flex {{isLike? 'is_like':''}}" bindtap="clickGood">
                <span class="iconfont icon-dianzan"></span>
                <view>{{moneyLike}}</view>
            </view>
            <button open-type="share" class="flex share">
                <!--<image class="footer-img2" src="../../images/pageImg/share.png"></image>-->
                <span class="iconfont icon-fenxiang"></span>
                <view>分享小程序</view>
            </button>
            <view class="flex friends-circle" bindtap="btnClick">
                <image class="footer-img3" src="../../images/pageImg/friends-circle.png"></image>
                <view>朋友圈</view>
            </view>
        </view>
    </view>
    <view wx:if="{{options.IsShare == 1}}" class="go-index" bindtap="goHome">
        <image class="go-index-img" src="../../images/pageImg/home1.png"></image>
        <view>返回主页</view>
    </view>
    <view class="canvas-img">
        <canvas canvas-id="canvasShare" style="width: 100%; height: 1206rpx"></canvas>
    </view>
</view>