        <image src="{{item.url1}}"></image>
        <view class="list-right">
            <view class="list-right-top">{{item.title}}</view>
            <view class="list-right-bottom">{{item.time}}</view>
        </view>
    </view>-->
    <view
            class="gold_item_wrap common_wrap"
            wx:for="{{list}}"
            wx:key="index"
            bindtap="goToDetailsPage"
            data-money-code="{{item.moneyCode}}"
    >
        <view class="gold_item common_content" bindtap="goToDetailsPage" data-money-code="{{item.moneyCode}}">
            <image mode="aspectFit" src="{{item.url1}}"></image>
            <view class="list-right">
                <view class="list-right-top">{{item.title}}</view>
                <view class="list-right-bottom">{{item.strTime}}</view>
            </view>
        </view>
    </view>
</view>