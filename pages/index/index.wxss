page {
    background-color: #fff;
}
.select-wrap {
    display: flex;
    margin-left: 37rpx;
    margin-top: 22rpx;
    margin-bottom: 22rpx;
}
.section_hot {
    width: 260rpx;
    height: 50rpx;
    border-radius:8rpx;
    -boxshadow:0px 0px 21rpx rgba(198,160,86, 0.2);
    border: 1rpx solid #C6A056;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    color: #C6A056;
    position: relative;
}
.section_hot picker {
    width: 100%;
    height: 100%;
}
.section_hot .picker {
    line-height:50rpx;
    margin-left: 15rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.section_hot_img {
    width: 20rpx;
    height: 11rpx;
    position: absolute;
    right: 14rpx;
    top: 20rpx;
}
.select-search-wrap {
    margin-left: 40rpx;
    height: 50rpx;
    padding-left: 20rpx;
    padding-right: 35rpx;
}
.select-search {
    width: 32rpx;
    height: 32rpx;
    margin-top: 10rpx;
}
.select-left {
    margin-left: 65rpx;
}
.banner {
    width: 750rpx;
    height: 341rpx;
}
.banner-img {
    width: 750rpx;
    height: 100%;
    display: block;
}
.advertising {
    width: 750rpx;
    height: 114rpx;
    margin-top: 6rpx;
    display: block;
    /*margin-bottom: 8rpx;*/
    /* background-color: #bfa; */
}
.list {
    display: flex;
    /*height: 162rpx;*/
    margin: 0 34rpx 0 34rpx;
    padding: 23rpx 4rpx 23rpx 0;
    border-bottom: 1rpx solid #EFEFEF;
}
.list image {
    width: 220rpx;
    height: 116rpx;
    margin-right: 21rpx;
}
.list-right {
    width: 436rpx;
}

.list-right-top {
    line-height: 40rpx;
    color: rgba(51,51,51,1);
    height: 77rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.list-right-bottom {
    color: #8E8D8D;
    font-size: 24rpx;
    margin-top: 10rpx;
    text-align: right;
}
.look-more {
    font-size:28rpx;
    color:rgba(157,156,156,1);
    line-height:26rpx;
    text-align: center;
    width: 100%;
    padding-top: 28rpx;
    padding-bottom: 26rpx;
}

.weui-loading {
    margin: 10px 5px 10px 0;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    background:  url('http://img02.exam8.com/img2017/minapp/icon/loading.gif') no-repeat;
    background-size: 100%;
}
.weui-loadmore {
    width: 65%;
    color: #9a9a9a;
    margin: 1.5rpx auto;
    line-height: 1.6rpx;
    font-size: 14px;
    text-align: center;
}
.weui-loadmore_tips {
    display: inline-block;
    vertical-align: middle;
}
.is-end {
    height: 40px;
    text-align: center;
    font-size: 14px;
    color: #9a9a9a;
    line-height: 40px;
}
.empty {
    font-size: 30rpx;
    text-align: center;
    margin-top: 150rpx;
}

.ad1 {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background-color: #bfa;
    font-size: 22rpx;
    color: #000;
    text-align: center;
    line-height: 80rpx;
}

.ad2 {
    position: fixed;
    bottom: 0rpx;
    left: 0;
    width: 100%;
    height: 80rpx;
    background-color: #baf;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
}
.ad3 {
    position: fixed;
    bottom: 0rpx;
    top: 0;
    width: 100%;
    height: 100%;
}

.ad3 image {
    display: block;
    width: 100%;
    height: 100%;
    background-color: #abf;
}
.close_ad {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 25rpx;
    text-align: center;
    line-height: 50rpx;
}